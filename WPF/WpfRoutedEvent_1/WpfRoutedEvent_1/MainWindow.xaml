<Window x:Class="WpfRoutedEvent_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfRoutedEvent_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="300"
        TextBoxBase.TextChanged="Window_TextChanged">
    <Grid
        TextBoxBase.TextChanged="Grid_TextChanged"
        >
        <TextBox x:Name="TextBox" Text="" Width="190"
            HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" 
            TextWrapping="Wrap"
            TextChanged="TextBox_TextChanged"
            />

        <RadioButton x:Name="radBut1" 
                     Content="Обработка события в TextBox" 
                     HorizontalAlignment="Left" Margin="35,80,0,0" VerticalAlignment="Top"
                     />
        <RadioButton x:Name="radBut2" 
                     Content="Обработка события в Grid" 
                     HorizontalAlignment="Left" Margin="35,110,0,0" VerticalAlignment="Top"
                     />
        <RadioButton x:Name="radBut3" 
                     Content="Обработка события в Window" 
                     HorizontalAlignment="Left" Margin="35,140,0,0" VerticalAlignment="Top"
                     />
    </Grid>
</Window>
