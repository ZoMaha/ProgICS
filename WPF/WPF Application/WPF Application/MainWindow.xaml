<Window x:Class="WPF_Application.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Application"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="142" Width="316">
    <Grid>
        <Button x:Name="btnStart" Content="Start" 
                HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" 
                Height="30" Width="110" 
                Click="btnStart_Click"
                />
        <Button x:Name="btnCancel" Content="Cancel" 
                HorizontalAlignment="Left" Margin="10,61,0,0" VerticalAlignment="Top" 
                Height="30" Width="110" 
                Click="btnCancel_Click"
                />
        <Label x:Name="lblCycles" Content="Cycles:" 
               HorizontalAlignment="Left" Margin="131,12,0,0" VerticalAlignment="Top" 
               Width="130"
               />
        <Label x:Name="lbl" Content="" 
               HorizontalAlignment="Left" Margin="131,63,0,0" VerticalAlignment="Top" 
               Width="130"
               />

    </Grid>
</Window>
