<Window x:Class="Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Pad"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <InkCanvas x:Name="inkCanvas1"
            Margin="10,10,0,0" 
            Background="LightYellow"
            />
        <Button x:Name="button1" Content="Clear" 
                Width="120"
                HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" 
                Click="button1_Click"
                />
        <Button x:Name="button2" Content="Close" 
                Width="120"
                HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" 
                Click="button2_Click"
                />
    </Grid>
</Window>
